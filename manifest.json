{
  "manifest_version": 3,
  "name": "PoE Wiki Quick Search",
  "short_name": "PoE Wiki Search",
  "description": "Quickly search the Path of Exile wikis (PoE1 & PoE2) with autocomplete.",
  "version": "1.0.0",
  "author": "PoE Wiki Quick Search",
  "homepage_url": "https://github.com/yourname/poe-wiki-quick-search",
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "https://www.poewiki.net/*",
    "https://www.poe2wiki.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
